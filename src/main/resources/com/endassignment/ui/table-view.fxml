<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: #252525;"
          xmlns="http://javafx.com/javafx/11.0.14-internal">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="70.0" minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" prefHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Pane style="-fx-background-color: black;" GridPane.columnSpan="2"/>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/libraryimg.png"/>
                    </image>
                </ImageView>
                <Label text="Library system">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </HBox>
        <Label fx:id="specifyScreenLabel" style="-fx-font-size: 30;" text="Label" GridPane.halignment="LEFT"
               GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Label>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <columns>

            </columns>
            <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
            </GridPane.margin>
        </TableView>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <Button minWidth="100.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add"/>
                <Button minWidth="100.0" mnemonicParsing="false" onAction="#onEditButtonClick" text="Edit"/>
                <Button minWidth="100.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete"/>
                <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
            </children>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="3.0" GridPane.columnSpan="2">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#onLendingReceivingButtonClick"
                        style="-fx-background-color: gray; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Lending/receiving"/>
                <Button fx:id="collectionButton" mnemonicParsing="false" onMouseClicked="#onCollectionButtonClick"
                        style="-fx-background-color: gray; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Collection"/>
                <Button fx:id="membersButton" mnemonicParsing="false" onMouseClicked="#onMembersButtonClick"
                        style="-fx-background-color: gray; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Members"/>
            </children>
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </HBox>
    </children>
</GridPane>
