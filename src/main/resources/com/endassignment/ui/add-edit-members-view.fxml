<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: #252525;"
          xmlns="http://javafx.com/javafx/11.0.14-internal">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="70.0" minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" prefHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Pane style="-fx-background-color: black;" GridPane.columnSpan="2"/>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="3.0" GridPane.columnSpan="2">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#onLendingReceivingButtonClick"
                        style="-fx-background-color: gray; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Lending/receiving"/>
                <Button mnemonicParsing="false" onMouseClicked="#onCollectionButtonClick"
                        style="-fx-background-color: gray; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Collection"/>
                <Button mnemonicParsing="false" onMouseClicked="#onMembersButtonClick"
                        style="-fx-background-color: #252525; -fx-min-width: 150; -fx-background-radius: 3 3 0 0;"
                        text="Members"/>
            </children>
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/libraryimg.png"/>
                    </image>
                </ImageView>
                <Label text="Library system">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </HBox>
        <Label fx:id="memberLabel" style="-fx-font-size: 30;" text="Add member" GridPane.halignment="LEFT"
               GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets left="20.0"/>
            </GridPane.margin>
        </Label>
        <GridPane style="-fx-background-color: gray; -fx-background-radius: 10 10 10 10;" GridPane.columnSpan="2"
                  GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <GridPane.margin>
                <Insets left="20.0" right="20.0"/>
            </GridPane.margin>
            <children>
                <TextField fx:id="firstNameField" maxWidth="300.0" promptText="First name">
                    <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="lastNameField" maxWidth="300.0" promptText="Last name" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </GridPane.margin>
                </TextField>
                <DatePicker fx:id="birthDatePicker" maxWidth="300.0" minWidth="300.0"
                            promptText="Birth date (dd/mm/yyyy)" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnSpan="2"
              GridPane.rowIndex="3">
            <children>
                <Button fx:id="addEditButton" defaultButton="true" minWidth="100.0" mnemonicParsing="false"
                        onAction="#onMemberButtonClick" text="Add member"/>
                <Button cancelButton="true" minWidth="100.0" mnemonicParsing="false" onAction="#onCancelButtonClick"
                        text="Cancel"/>
            </children>
            <GridPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </GridPane.margin>
        </HBox>
    </children>
</GridPane>
